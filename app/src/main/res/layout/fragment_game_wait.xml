<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="in.maru.pathify.ui.gameSetup.OnGameCreatedWaitFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.495">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/host_profile_pic"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/user"
                    android:padding="16dp"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/host_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Rahul Mohan"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/host_profile_pic"/>

                <TextView
                    android:id="@+id/host_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rahul.10.mohan"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_toEndOf="@id/host_profile_pic"
                    android:layout_below="@id/host_display_name"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:background="@android:color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.495">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/joiner_profile_pic"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:padding="16dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/joiner_display_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/joiner_profile_pic"/>

                <TextView
                    android:id="@+id/joiner_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_toEndOf="@id/joiner_profile_pic"
                    android:layout_below="@id/joiner_display_name"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:background="@android:color/white"
        android:text="Waiting..."/>

</RelativeLayout>
